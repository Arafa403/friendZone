<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" type="image/png" href="/images/Screenshot%202025-09-07%20044718.png">

    <title>Login & Register - GameZone</title>
    <style>
        /* Reset and base */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            flex-direction: column;
            color: #fff;
            overflow-x: hidden;
        }

        /* Overlay background image with dark overlay */
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/images/Screenshot%202025-09-07%20044718.png') no-repeat center top / cover;
            filter: brightness(0.4);
            z-index: -1;
        }

        /* Header */
        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.6);
            padding: 15px 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .logo img {
            height: 36px;
            width: 36px;
            object-fit: contain;
            filter: drop-shadow(0 0 2px rgba(0, 0, 0, 0.7));
        }

        .logo h1 {
            font-size: 28px;
            font-weight: 700;
            letter-spacing: 1.5px;
            text-shadow: 0 0 5px rgba(0, 0, 0, 0.7);
        }

        /* Hamburger menu button */
        .menu-toggle {
            display: none;
            background: none;
            border: none;
            font-size: 28px;
            color: #fff;
            cursor: pointer;
        }

        nav ul {
            list-style: none;
            display: flex;
            gap: 25px;
        }

        nav ul li a {
            color: #fff;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            padding: 8px 12px;
            border-radius: 8px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        nav ul li a:hover,
        nav ul li a:focus {
            background-color: #6a11cb;
            color: #fff;
            outline: none;
            box-shadow: 0 0 8px #6a11cb;
        }

        /* Author Badge */
        .author-badge {
            position: fixed;
            top: 80px;
            left: 20px;
            background: rgba(0, 0, 0, 0.7);
            padding: 12px 18px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            gap: 14px;
            box-shadow: 0 0 15px rgba(106, 17, 203, 0.7);
            z-index: 1001;
            max-width: 300px;
            box-sizing: border-box;
            transition: transform 0.4s ease, opacity 0.4s ease;
            will-change: transform;
        }

        .author-badge:hover {
            transform: scale(1.05);
        }

        .author-badge img {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            border: 2.5px solid #6a11cb;
            object-fit: cover;
            box-shadow: 0 0 8px #6a11cb;
            flex-shrink: 0;
        }

        .author-badge h3 {
            font-size: 16px;
            font-weight: 600;
            color: #fff;
            text-shadow: 0 0 5px rgba(0, 0, 0, 0.7);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 180px;
        }

        .author-badge a.profile-info {
            text-decoration: none;
        }


        /* Main container */
        .container {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 140px 20px 40px;
            box-sizing: border-box;
            min-height: 100vh;
        }

        /* Login box */
        .login-box {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.6);
            width: 100%;
            max-width: 480px;
            padding: 40px 35px;
            color: #fff;
            text-align: center;
            transition: box-shadow 0.3s ease;
        }

        .login-box:hover {
            box-shadow: 0 20px 50px rgba(106, 17, 203, 0.8);
        }

        /* Tabs */
        .tabs {
            display: flex;
            justify-content: center;
            margin-bottom: 30px;
            gap: 30px;
        }

        .tab-btn {
            background: transparent;
            border: none;
            font-size: 20px;
            font-weight: 700;
            color: #ddd;
            cursor: pointer;
            padding: 20px;
            border-radius: 30px;
            transition: all 0.3s ease;
            box-shadow: inset 0 -2px 0 transparent;
        }

        .tab-btn.active {
            color: #6a11cb;
            box-shadow: inset 0 -3px 0 #6a11cb;
            font-weight: 800;
        }

        .tab-btn:hover:not(.active) {
            color: #a88cff;
        }

        /* Forms */
        form {
            display: none;
            text-align: left;
        }

        form.active {
            display: block;
        }

        input {
            width: 100%;
            padding: 14px 18px;
            margin: 12px 0 20px;
            border-radius: 12px;
            border: none;
            background: rgba(255, 255, 255, 0.15);
            color: #fff;
            font-size: 16px;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            outline: none;
            box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.2);
        }

        input::placeholder {
            color: #ddd;
            font-style: italic;
        }

        input:focus {
            background: rgba(255, 255, 255, 0.3);
            box-shadow: 0 0 8px #6a11cb;
        }

        button {
            width: 100%;
            padding: 15px 0;
            background: #6a11cb;
            border: none;
            border-radius: 30px;
            color: #fff;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            box-shadow: 0 6px 15px rgba(106, 17, 203, 0.6);
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        button:hover,
        button:focus {
            background: #8e44fd;
            transform: scale(1.05);
            outline: none;
            box-shadow: 0 8px 20px rgba(142, 68, 253, 0.8);
        }

        /* Responsive */
        @media (max-width: 600px) {
            header {
                padding: 12px 15px;
                flex-direction: row;
                align-items: center;
                justify-content: space-between;
                gap: 10px;
            }

            .logo h1 {
                font-size: 20px;
            }

            /* Show hamburger button */
            .menu-toggle {
                display: block;
            }

            nav {
                position: absolute;
                top: 50px;
                left: 227px;
                width: 100%;
                background: rgba(0, 0, 0, 0.8);
                border-bottom-left-radius: 15px;
                border-bottom-right-radius: 15px;
                max-height: 0;
                overflow: hidden;
                transition: max-height 0.3s ease;
                z-index: 999
            }

            nav.open {
                max-height: 300px;
            }

            nav ul {
                flex-direction: column;
                gap: 0;
                padding: 10px 0;
            }

            nav ul li {
                width: 100%;
            }

            nav ul li a {
                display: block;
                width: 100%;
                padding: 12px 20px;
                font-size: 16px;
                border-radius: 0;
                text-align: left;
                border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            }

            nav ul li a:hover,
            nav ul li a:focus {
                background-color: #6a11cb;
                box-shadow: none;
            }

            .login-box {
                padding: 30px 25px;
                max-width: 100%;
                margin: 0 10px;
            }

            .tabs {
                gap: 20px;
                flex-wrap: wrap;
            }

            .tab-btn {
                font-size: 18px;
                padding: 8px 16px;
                flex: 1 1 45%;
                text-align: center;
            }
        }

        @media (max-width: 400px) {
            .author-badge {
                top: 70px;
                left: 10px;
                padding: 10px 14px;
                gap: 10px;
            }

            .author-badge img {
                width: 40px;
                height: 40px;
            }

            .author-badge h3 {
                font-size: 14px;
            }
        }
    </style>
</head>

<body>
    <header>

        <div class="logo">
            <img src="/images/Screenshot 2025-09-07 044718.png" alt="Game Logo" />
            <h1>GameZone</h1>
        </div>
        <button class="menu-toggle" aria-label="Toggle menu" aria-expanded="false">&#9776;</button>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="#" onclick="showForm('register')">Register</a></li>
                <li><a href="/profile">Profile</a></li>
                <li>
                    <a href="#" onclick="showForm('login')">Login</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="author-badge" title="Author: Arafa Mohamed">
        <a href="/images/1757532906359.jpg" target="_blank" rel="noopener noreferrer">
            <img src="/images/1757532906359.jpg" alt="Arafa" />
        </a>
        <a href="https://linkedin.com/in/arafa-mohamed-8015a3374" target="_blank" rel="noopener noreferrer"
            class="profile-info">
            <h3>Arafa Mohamed</h3>
        </a>
    </div>

    <div class="container">
        <div class="login-box" role="main" aria-label="Login and Register Forms">
            <div class="tabs" role="tablist" aria-label="Login and Register Tabs">
                <button class="tab-btn active" role="tab" aria-selected="true" aria-controls="loginForm" id="loginTab"
                    onclick="showForm('login')">Login</button>
                <button class="tab-btn" role="tab" aria-selected="false" aria-controls="registerForm" id="registerTab"
                    onclick="showForm('register')">Register</button>
            </div>

            <!-- Login Form -->
            <form id="loginForm" action="/levels" method="POST" class="active" role="tabpanel"
                aria-labelledby="loginTab">
                <input type="email" name="email" placeholder="Email" required aria-label="Email" />
                <input type="password" name="password" placeholder="Password" required aria-label="Password" />
                <button type="submit" aria-label="Login">Login</button>
            </form>

            <!-- Register Form -->
            <form id="registerForm" action="/register" method="POST" role="tabpanel" aria-labelledby="registerTab">
                <input type="text" name="name" placeholder="Full Name" required aria-label="Full Name" />
                <input type="email" name="email" placeholder="Email" required aria-label="Email" />
                <input type="password" name="password" placeholder="Password" required aria-label="Password" />
                <input type="text" name="gender" placeholder="Gender (Male or Female)" required aria-label="Gender" />
                <input type="text" name="country" placeholder="Country" aria-label="Country" />
                <input type="number" name="age" placeholder="Age" aria-label="Age" min="0" max="120" />
                <button type="submit" aria-label="Register">Register</button>
            </form>
        </div>
    </div>

    <script>
        function showForm(formType) {
            const loginForm = document.getElementById('loginForm');
            const registerForm = document.getElementById('registerForm');
            const tabs = document.querySelectorAll('.tab-btn');

            if (formType === 'login') {
                loginForm.classList.add('active');
                registerForm.classList.remove('active');
                tabs[0].classList.add('active');
                tabs[0].setAttribute('aria-selected', 'true');
                tabs[1].classList.remove('active');
                tabs[1].setAttribute('aria-selected', 'false');
            } else {
                registerForm.classList.add('active');
                loginForm.classList.remove('active');
                tabs[1].classList.add('active');
                tabs[1].setAttribute('aria-selected', 'true');
                tabs[0].classList.remove('active');
                tabs[0].setAttribute('aria-selected', 'false');
            }
        }

        const menuToggle = document.querySelector('.menu-toggle');
        const nav = document.querySelector('nav');

        menuToggle.addEventListener('click', () => {
            const isOpen = nav.classList.toggle('open');
            menuToggle.setAttribute('aria-expanded', isOpen);
        });

        // Hide/show author badge on scroll
        let lastScrollTop = 0;
        const authorBadge = document.querySelector('.author-badge');

        window.addEventListener('scroll', () => {
            let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

            if (scrollTop > lastScrollTop) {
                // Scrolling down - hide badge
                authorBadge.style.transform = 'translateX(-120%)';
                authorBadge.style.opacity = '0';
            } else {
                // Scrolling up - show badge
                authorBadge.style.transform = 'translateX(0)';
                authorBadge.style.opacity = '1';
            }
            lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
        });
    </script>
</body>

</html>